<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.freshpaint">

    <application
        android:allowBackup="true"
        android:icon="@drawable/freshpaintlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/freshpaintlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Freshpaint"
        tools:targetApi="31">

        <!-- Set LandingActivity as the entry point -->
        <activity
            android:name=".LandingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Admin Activity -->
        <activity
            android:name=".AdminActivity"
            android:exported="true" />

        <!-- Home Activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true" />

        <!-- Registration Activity -->
        <activity
            android:name=".RegistrationActivity"
            android:exported="false" />

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Profile Activity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- Donate Activity -->
        <activity
            android:name=".DonateActivity"
            android:exported="false" />

        <!-- Volunteer Activity -->
        <activity
            android:name=".VolunteerActivity"
            android:exported="false" />

        <!-- Events Activity -->
        <activity
            android:name=".EventsActivity"
            android:exported="false" />

        <!-- Content Management Activity -->
        <activity
            android:name=".ContentManagementActivity"
            android:exported="false" />

        <!-- Volunteer Management Activity -->
        <activity
            android:name=".ActivityVolunteerManagement"
            android:exported="true" />

    </application>

    <!-- Include permissions here if needed -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Add more permissions as needed -->

</manifest>

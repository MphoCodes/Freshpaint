<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/light_yellow"/> <!-- Background color -->
    <corners android:radius="8dp"/> <!-- Rounded corners -->
    <stroke
        android:color="@color/light_yellow"
    android:width="1dp"/> <!-- Border width -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/> <!-- Padding inside the shape -->
    <gradient
        android:startColor="@color/light_yellow"
        android:endColor="@color/yellow"
        android:angle="270"/>
</shape>
